# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Application Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Development/Production Environment
NODE_ENV=development

# MCP Server Configuration
MAGIC_API_KEY=your_magic_api_key
FIGMA_API_KEY=your_figma_api_key

# OpenGraph.io Configuration
# Get your API key from https://www.opengraph.io/
OPENGRAPH_IO_API_KEY=your_opengraph_io_api_key

# Rate Limiting (Optional - Upstash Redis)
# Get your credentials from https://upstash.com/
# If not set, will use in-memory rate limiting (not suitable for production)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Email (Resend)
# Get your API key from https://resend.com/
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=Snack <hello@yourdomain.com>

# Supabase Webhook Secret (Optional - for secure webhook endpoints)
SUPABASE_WEBHOOK_SECRET=your_webhook_secret