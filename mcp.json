{
  "mcpServers": {
    "@21st-dev/magic": {
      "command": "npx",
      "args": [
        "-y",
        "@21st-dev/magic@latest"
      ],
      "env": {
        "API_KEY": "${MAGIC_API_KEY}"
      }
    },
    "figma-remote-mcp": {
      "url": "https://mcp.figma.com/mcp"
    },
    "context7": {
      "url": "https://mcp.context7.com/mcp"
    },
    "og-mcp": {
      "command": "opengraph-io-mcp",
      "env": {
          "APP_ID": "${OPENGRAPH_IO_API_KEY}"
      }
    }
  }
}